---
import RelatedPosts from "../components/RelatedPosts.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title} withMaxWidth={false}>
  <article class="article-container">
    <header class="article-header">
      <div class="header-content">
        <h1 class="article-title">{frontmatter.title}</h1>
        <p class="article-subtitle">{frontmatter.excerpt}</p>

        <div class="article-meta">
          <div class="meta-left">
            <span
              class="category-badge"
              style={`background-color: ${
                frontmatter.categoryColor || "#333333"
              }; color: #000;`}>{frontmatter.category}</span
            >
          </div>
          <div class="meta-right">
            {
              // formatted date
              frontmatter.pubDate ? (
                <time>
                  {new Date(frontmatter.pubDate).toLocaleDateString("en-US", {
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                  })}
                </time>
              ) : null
            }
          </div>
        </div>
      </div>

      <!-- Featured image - using placeholder service -->
      <div class="featured-image-container">
        <img
          src={frontmatter.featuredImg}
          alt={`Image representing ${frontmatter.title}`}
          class="featured-image"
        />
      </div>
    </header>

    <div class="article-content">
      <div class="content-body">
        <slot />
      </div>
    </div>

    <footer class="article-footer">
      <hr />
      <div class="related-section">
        <h3>You may like...</h3>
        <RelatedPosts currentPost={frontmatter.title} />
      </div>
    </footer>
  </article>
</BaseLayout>

<style>
  .article-container {
    display: grid;
    grid-template-columns: 1fr;
    max-width: 100%;
    color: var(--color-text);
    font-family: system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
  }

  .article-header {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    padding: 4rem 2rem;
    align-items: center;
  }

  .header-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .article-title {
    font-size: 2.5rem;
    font-weight: 500;
    line-height: 1.2;
    margin: 0;
  }

  .article-subtitle {
    font-size: 1.1rem;
    line-height: 1.6;
    color: var(--color-text-light);
    margin: 0.5rem 0 1rem;
  }

  .article-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 2rem;
    font-size: 0.9rem;
  }

  .category-badge {
    background-color: var(--category-color, #333333);
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-weight: 500;
    font-size: 0.8rem;
    text-transform: uppercase;
  }

  .featured-image-container {
    width: 100%;
    border-radius: 0.5rem;
    overflow: hidden;
  }

  .featured-image {
    width: 100%;
    aspect-ratio: 4/3;
    object-fit: cover;
    border-radius: 0.5rem;
  }

  .featured-image-placeholder {
    display: none; /* Hide the old placeholder */
  }

  .article-content {
    display: grid;
    grid-template-columns: 1fr;
    margin-top: 2rem;
    padding: 0 2rem;
  }

  .section-number {
    font-size: 0.9rem;
    color: #888;
    font-weight: 500;
  }

  .content-body {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--color-text);
  }

  .content-body h2 {
    font-size: 1.8rem;
    font-weight: 500;
    margin: 3rem 0 1.5rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .content-body p {
    margin-bottom: 1.5rem;
  }

  .article-footer {
    margin-top: 4rem;
    padding: 2rem;
  }

  .article-footer hr {
    border: none;
    border-top: 1px solid var(--color-border);
    margin: 2rem 0;
  }

  .related-section h3 {
    font-size: 1.5rem;
    font-weight: 500;
    margin-bottom: 1.5rem;
  }

  .related-posts {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  /* Responsive styles */
  @media (max-width: 768px) {
    .article-header {
      grid-template-columns: 1fr;
    }

    .article-content {
      grid-template-columns: 1fr;
    }

    .section-numbers {
      display: none;
    }
  }
</style>

